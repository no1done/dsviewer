block content
    p
        a(href=`/`) Home 
        span / 
        a(href=`/filter/${namespace || 'default'}`) #{namespace || 'Default'} 
        span / #{kind}
    div(class="table-responsive")
        table.table(class="table-condensed")
            thead
                tr
                    for header in headers
                        th #{header}
            tbody
                for entity in entities
                    tr
                        for header in headers
                            td #{entity[header]}
    a(href=`/filter/${namespace}/${kind}?cursor=${previous}`) Previous   
    a(href=`/filter/${namespace}/${kind}?previous=${current}&cursor=${next}`) Next